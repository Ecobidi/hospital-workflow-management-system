<%-include ("partials/top") %>
<main class="col-lg-10">
  <div class="row space">
    <div class="col-12">
      <form action="/patients/new" method="POST">
        <div>
          <% errors.forEach(err => { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong><%= err.msg %></strong> 
            </div>
            <script>
              $(".alert").alert();
            </script>
          <% }) %>
        </div>

        <fieldset class="border p-2 rounded row text-white">
          <legend>Patient's Details</legend>
          <div class="form-group col-md-2">
            <label>Unique Registration: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="reg_no">
          </div>
          <div class="form-group col-md-5">
            <label>Surname: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="surname">
          </div>
          <div class="form-group col-md-5">
            <label>Other Name: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="other_name">
          </div>
          <div class="form-group col-md-4">
            <label>Gender: <strong class="text-danger">*</strong></label>
            <select name="gender" required class="form-control">
              <option>---Select Gender---</option>
              <option value="male">MALE</option>
              <option value="female">FEMALE</option>
            </select>
          </div>
          <div class="form-group col-md-4">
            <label>Marital Status: <strong class="text-danger">*</strong></label>
            <select name="marital_status" required class="form-control">
              <option>---Select Marital Status---</option>
              <option value="single">Single</option>
              <option value="married">Married</option>
              <option value="divorced">Divorced</option>
            </select>
          </div>
          <div class="form-group col-md-4">
            <label>Date of Birth: <strong class="text-danger">*</strong></label>
            <input required type="date" class="form-control" name="dob">
          </div>
          <div class="form-group col-md-5">
            <label>Residential Address: <strong class="text-danger">*</strong></label>
            <input required type="text" class="form-control" name="address">
          </div>
          <div class="form-group col-md-4">
            <label>Mobile Phone: <strong class="text-danger">*</strong></label>
            <input required type="tel" class="form-control" name="phone">
          </div>
          <div class="form-group col-md-3">
            <label>Registration Date: <strong class="text-danger">*</strong></label>
            <input required type="date" class="form-control" name="date_registered">
          </div>
        </fieldset>
      
        <div class="form-group mt-4">
          <button class="btn btn-success form-control" type="submit">Create Patient</button>
        </div>
      </form>
    </div>
  </div>

</main>

<%-include ("partials/bottom") %>