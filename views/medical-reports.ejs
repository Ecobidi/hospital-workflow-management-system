<%- include ('partials/top') %>
  <main class="col-lg-10">
    <div class="row space">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title text-white">Medical Reports</h3>
        <div>
          <a href="/medical-reports/new" class="btn btn-success">Create New Medical Report</a>
        </div>
      </div>
    </div>

    <div class="row space">
      <div class="col-12">
        <form id="search-form" method="GET" action="/medical-reports?" class="form-inline bordered">
          <div class="form-group mb-4 text-white">
            <input required type="text" name="search" id="search-box" class="form-control" placeholder="by patient reg no or doctor_id ...">
            <label class="mx-2">
              <input required type="radio" name="id_type" value="patient">By Patient Reg. No.
            </label>
            <label class="mx-2">
              <input required type="radio" name="id_type" value="doctor">By Doctor Username
            </label>
            <button type="submit" class="btn btn-info">Search</button>
          </div>
        </form>
        <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">Medical Reports</h4>
        <table class="table table-bordered table-striped">
          <thead class="text-white">
            <tr>
              <td>Patient Reg. No.</td>
              <td>Doctor ID</td>
              <td>Date</td>
              <td>Diagnosis</td>
              <td>Prescription</td>
              <td>More Info.</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody class="text-white">
            <% reports.forEach((m) => { %>
              <tr>
                <td class="text-right"><%= m.patient_reg_no %></td>
                <td><%= m.doctor_username %></td>
                <td><%= m.date.toDateString() %></td>
                <td><%= m.diagnosis %></td>
                <td><%= m.prescription %></td>
                <td><%= m.more_info %></td>
                <td>
                  <a href='<%= "/medical-reports/view/" + m._id %>' class="btn btn-sm btn-primary"><i class="fa fa-eye" aria-hidden="true"></i></a>
                  <a href='<%= "/medical-reports/remove/" + m._id %>' class="btn btn-sm btn-danger"><i class="fa fa-recycle" aria-hidden="true"></i></a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>
</div> 

<%- include ('partials/bottom') %>