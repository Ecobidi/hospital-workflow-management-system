<%- include ('partials/top') %>
  <main class="col-lg-10">
    <div class="row space">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title text-white">Doctors</h3>
        <div>
          <a href="/doctors/new" class="btn btn-success">Create New Doctor</a>
        </div>
      </div> 
    </div>

    <div class="row">
      <div class="col-12">
        <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Doctors</h4>
        <table class="table table-bordered table-striped text-white">
          <thead class="font-weight-bold">
            <tr>
              <td>Username</td>
              <td>Full Name</td>
              <td>Specialization</td>
              <td>Address</td>
              <td>Phone</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% doctors.forEach((m) => { %>
              <tr>
                <td><%= m.username %></td>
                <td><%= m.first_name + ' ' + m.surname %></td>
                <td><%= m.specialization %></td>
                <td><%= m.address %></td>
                <td><%= m.phone %></td>
                <td>
                  <a href='<%= "/doctors/edit?doctor_id=" + m._id %>' class="btn btn-sm btn-primary">Edit</i></a>
                  <a href='<%= "/doctors/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</i></a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>

</div>
    

<%- include ('partials/bottom') %>