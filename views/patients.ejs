<%- include ('partials/top') %>
  <main class="col-lg-10">
    <div class="row space">
      <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
        <h3 class="title text-white">Patients</h3>
        <div>
          <a href="/patients/new" class="btn btn-success">Register New Patient</a>
        </div>
      </div>
    </div>

    <div class="row space">
      
      <div class="col-12">
        <form id="search-form" method="GET" action="/patients?" class="form-inline">
          <div class="form-group mb-4">
            <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search by patient name...">
            <button type="submit" class="btn btn-info">Search</button>
          </div>
        </form>
        <h4 class="font-weight-light text-center text-white bg-success p-2 m-0 table-top">List of Patients</h4>
        <table class="table table-bordered table-striped">
          <thead class="text-white font-weight-bold">
            <tr>
              <td>Reg. No.</td>
              <td>Name</td>
              <td>Date Of Birth</td>
              <td>Date Registered</td>
              <td>Gender</td>
              <td>Marital Status</td>
              <td>Address</td>
              <td>Phone Number</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody class="text-white">
            <% patients.forEach((m) => { %>
              <tr>
                <td class="text-right"><%= m.reg_no %></td>
                <td><%= m.surname + ' ' + m.other_name %></td>
                <td><%= m.dob.toDateString() %></td>
                <td><%= m.date_registered.toDateString() %></td>
                <td><%= m.gender %></td>
                <td><%= m.marital_status %></td>
                <td><%= m.address %></td>
                <td><%= m.phone %></td>
                <td>
                  <!-- <a href='<%= "/patients/view/" + m._id %>' class="btn btn-sm btn-primary">View</a> -->
                  <a href='<%= "/patients/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
                </td>
              </tr>
            <% }) %>          
          </tbody>
        </table>
      </div>
    </div>
  </main>
</div>
</div> 

<%- include ('partials/bottom') %>