<%-include ("partials/top") %>
<main class="col-lg-10">
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2 mb-4">
      <h3 class="title text-white text-center">Edit Doctor Information</h3>
    </div>
    <div class="col-12">
      <form action='<%= "/doctors/edit?doctor_id=" + dao._id %>' method="POST">
        <div>
          <% if (error_msg && error_msg.length > 0) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong><%= error_msg %></strong> 
            </div>
            <script>
              $(".alert").alert();
            </script>
          <% } %>
        </div>
        <div>
          <% errors.forEach(err => { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <strong><%= err.msg %></strong> 
            </div>
            <script>
              $(".alert").alert();
            </script>
          <% }) %>
        </div>

        <fieldset class="border p-2 rounded row text-white">
          <legend>Authentication Details</legend>
          <div class="form-group col-12">
            <label>Username: <strong class="text-danger">*</strong></label>
            <input value='<%= dao.username %>' type="text" disabled class="form-control">
          </div>
          <div class="form-group col-md-6">
            <label>Password: <strong class="text-danger">*</strong></label>
            <input type="password" class="form-control" name="password" placeholder="*******">
          </div>
          <div class="form-group col-md-6">
            <label>Retype Password: <strong class="text-danger">*</strong></label>
            <input type="password" class="form-control" name="retype_password" placeholder="*******">
          </div>
        </fieldset>

        <fieldset class="border p-2 rounded row text-white">
          <legend>Personal Details</legend>
          <div class="form-group col-md-6">
            <label>First Name: <strong class="text-danger">*</strong></label>
            <input value='<%= dao.first_name %>' type="text" class="form-control" name="first_name">
          </div>
          <div class="form-group col-md-6">
            <label>Last Name: <strong class="text-danger">*</strong></label>
            <input value='<%= dao.surname %>' type="text" class="form-control" name="surname">
          </div>
          <div class="form-group col-md-6">
            <label>Specialization: <strong class="text-danger">*</strong></label>
            <input value='<%= dao.specialization %>' type="text" class="form-control" name="specialization">
          </div>
          <div class="form-group col-md-6">
            <label>Address: <strong class="text-danger">*</strong></label>
            <input value='<%= dao.address %>' type="text" class="form-control" name="address">
          </div>
          <div class="form-group col-md-6">
            <label>Phone: <strong class="text-danger">*</strong></label>
            <input value='<%= dao.phone %>' type="number" class="form-control" name="phone">
          </div>
        </fieldset>
       
        <div class="form-group mt-4">
          <button class="btn btn-success form-control" type="submit">Proceed To Update</button>
        </div>
      </form>
    </div>
  </div>

</main>

<%-include ("partials/bottom") %>